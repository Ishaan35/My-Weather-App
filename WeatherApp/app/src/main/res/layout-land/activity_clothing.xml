<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ClothingActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/top_clothing_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_"
        app:srcCompat="@drawable/sweater" />

    <ImageView
        android:id="@+id/bottom_clothing_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/top_clothing_image"
        app:layout_constraintStart_toStartOf="@+id/top_clothing_image"
        app:layout_constraintTop_toBottomOf="@+id/top_clothing_image"
        app:srcCompat="@drawable/trousers" />

    <ImageView
        android:id="@+id/shoe_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@+id/bottom_clothing_image"
        app:layout_constraintStart_toStartOf="@+id/bottom_clothing_image"
        app:layout_constraintTop_toBottomOf="@+id/bottom_clothing_image"
        app:srcCompat="@drawable/shoe" />

    <ImageView
        android:id="@+id/extras1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/location_"
        app:srcCompat="@drawable/hat" />

    <ImageView
        android:id="@+id/extras2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/extras1"
        app:layout_constraintStart_toStartOf="@+id/extras1"
        app:layout_constraintTop_toBottomOf="@+id/extras1"
        app:srcCompat="@drawable/umbrellaa" />

    <ImageView
        android:id="@+id/extras3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/extras2"
        app:layout_constraintStart_toStartOf="@+id/extras2"
        app:layout_constraintTop_toBottomOf="@+id/extras2"
        app:srcCompat="@drawable/umbrellaa" />

    <TextView
        android:id="@+id/bottom_clothing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antipastoregular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_clothing_image"
        app:layout_constraintEnd_toEndOf="@+id/top_clothing_text"
        app:layout_constraintStart_toStartOf="@+id/top_clothing_text"
        app:layout_constraintTop_toTopOf="@+id/bottom_clothing_image"
        tools:text="-------" />

    <TextView
        android:id="@+id/location_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/antipastoregular"
        android:text="Brampton"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/top_clothing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antipastoregular"
        android:text="Sweater"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_clothing_image"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/top_clothing_image"
        app:layout_constraintTop_toTopOf="@+id/top_clothing_image" />

    <TextView
        android:id="@+id/shoe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antipastoregular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/shoe_image"
        app:layout_constraintEnd_toEndOf="@+id/bottom_clothing_text"
        app:layout_constraintStart_toStartOf="@+id/bottom_clothing_text"
        app:layout_constraintTop_toBottomOf="@+id/bottom_clothing_image"
        tools:text="------" />

    <TextView
        android:id="@+id/extras1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antipastoregular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/extras1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/extras1"
        app:layout_constraintTop_toTopOf="@+id/extras1"
        tools:text="------" />

    <TextView
        android:id="@+id/extras2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antipastoregular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/extras2"
        app:layout_constraintEnd_toEndOf="@+id/extras1_text"
        app:layout_constraintStart_toStartOf="@+id/extras1_text"
        app:layout_constraintTop_toTopOf="@+id/extras2"
        tools:text="--------" />

    <TextView
        android:id="@+id/extras3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antipastoregular"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/extras3"
        app:layout_constraintEnd_toEndOf="@+id/extras2_text"
        app:layout_constraintStart_toStartOf="@+id/extras2_text"
        app:layout_constraintTop_toTopOf="@+id/extras3"
        tools:text="----" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>